@model List<GetServiceQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid px-4">
    <br />

    <table class="table table-bordered">
        @{
            int count = 0;
        }
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>İkon</th>
            <th>İşlemler</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Icon </td>
                <td>
                    <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">Sil</a>
                    <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-info">Güncelle</a>
                </td>
            </tr>
        }

    </table>

    <br />
    <a href="/Service/CreateService" class="btn btn-primary">Yeni Hizmet Oluştur</a>

</div>

