@model List<GetFeatureQueryResult>

@foreach (var item in Model)
{
	<section style="padding-top: 7rem;">
		<div class="bg-holder" style="background-image:url(/jadoo/public/assets/img/hero/hero-bg.svg);">
		</div>

		<div class="container">
			<div class="row align-items-center">
				<div class="col-md-5 col-lg-6 order-0 order-md-1 text-end"><img class="pt-7 pt-md-0 hero-img" src="@item.ImageUrl" alt="hero-header" /></div>
				<div class="col-md-7 col-lg-6 text-md-start text-center py-6">

					<h4 class="fw-bold text-danger mb-3">@item.ShortDescription</h4>

					<h1 class="hero-title">@item.Title</h1>
					<br />
					<p class="mb-4 fw-medium">@item.LongDescription</p>
					<br />
					<div class="text-center text-md-start">						
						<div class="w-100 d-block d-md-none"></div><a href="#!" role="button" data-bs-toggle="modal" data-bs-target="#popupVideo"><span class="btn btn-danger round-btn-lg rounded-circle me-3 danger-btn-shadow"> <img src="~/jadoo/public/assets/img/hero/play.svg" width="15" alt="paly" /></span></a><span class="fw-medium">Play Demo</span>
						<div class="modal fade" id="popupVideo" tabindex="-1" aria-labelledby="popupVideo" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered modal-lg">
								<div class="modal-content">
									<iframe class="rounded" style="width:100%;max-height:500px;" height="500px" src="https://www.youtube.com/watch?v=otpNfeQ2etU" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="allowfullscreen"></iframe>
								</div>
							</div>
						</div>
					</div>					
				</div>
			</div>
		</div>
	</section>
}

