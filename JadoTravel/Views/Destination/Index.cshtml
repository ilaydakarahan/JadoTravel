@model List<GetDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid px-4">
    <br />

	<table class="table table-bordered">
        @{
            int count =0;
        }

		<tr>
			<th>#</th>
			<th>Şehir</th>
			<th>Tur Süresi</th>
			<th>Fiyat</th>
            <th>İşlemler</th>
		</tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.City</td>
                <td>@item.Duration</td>
                <td>@item.Price</td>
                <td><a href="/Destination/DeleteDestination/@item.DestinationId" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                <td><a href="/Destination/UpdateDestination/@item.DestinationId" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
            </tr>
        }
	</table>
    <br />
    <a href="/Destination/CreateDestination/" class="btn btn-primary">Yeni Rota Oluştur</a>

</div>



