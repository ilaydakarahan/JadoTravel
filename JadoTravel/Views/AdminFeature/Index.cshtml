@model List<GetFeatureQueryResult>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid px-4">
	<br />
	<table class="table table-bordered">
		<tr>
			<th>#</th>
			<th>Başlık</th>
			<th>Kısa Açıklama</th>
			<th>Uzun Açıklama</th>
			<th>Resim</th>
			<th>Güncelle</th>
		</tr>
		@foreach (var item in Model)
		{
			<tr>
				<th>@item.FeatureId</th>
				<td>@item.Title</td>
				<td>@item.ShortDescription</td>
				<td>@item.LongDescription</td>
				<td><img src="@item.ImageUrl" style="height:100px;width:100px" /></td>
				<td><a href="/AdminFeature/UpdateFeature/@item.FeatureId" class="btn mb-1 btn-rounded btn-primary">Güncelle</a></td>
			</tr>
		}
	</table>
</div>
